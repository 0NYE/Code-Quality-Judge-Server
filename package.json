{
  "name": "code-quality-judge-server",
  "version": "1.0.0",
  "description": "lighthouse 등을 이용해 html, css, js 코드 퀄리티를 검사합니다.",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --platform=node --target=node18.15.0 --bundle --minify --outdir=dist",
    "esbuild-watch": "esbuild src/index.ts --platform=node --target=node18.15.0 --bundle --minify --outdir=dist --watch",
    "nodemon-output": "nodemon --watch dist/ dist/index.js",
    "dev": "concurrently \"npm run nodemon-output\"  \"npm run esbuild-watch\"",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0NYE/Code-Quality-Judge-Server.git"
  },
  "keywords": [],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/0NYE/Code-Quality-Judge-Server/issues"
  },
  "homepage": "https://github.com/0NYE/Code-Quality-Judge-Server#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "concurrently": "^8.0.1",
    "esbuild": "^0.17.17",
    "eslint": "^8.38.0",
    "eslint-plugin-import": "^2.27.5",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7"
  }
}
